#CHALLENGE B

#Snare Drum
live_loop :snare do
  12.times do
    sample :drum_snare_soft
    sleep 2
  end
  stop
end

#Bass Drum
live_loop :bass do
  16.times do
    sample :drum_heavy_kick
    sleep 1
  end
  stop
end

#Hi Hat
live_loop :cymbal do
  16.times do
    sample :drum_cymbal_closed
    sleep 0.5
  end
  stop
end

sleep 24

#Crash Cymbal
live_loop :crash_cymbal do
  4.times do
    sample :drum_splash_hard
    sleep 2
  end
  stop
end

#Ride Cymbal
live_loop :ride_cymbal do
  16.times do
    sample :drum_cymbal_hard
    sleep 0.5
  end
  stop
end

sleep 8

#Snare Drum
live_loop :snare_soft do
  4.times do
    sample :drum_snare_soft
    sleep 2
  end
  stop
end

#Bass Drum
live_loop :heavy_kick do
  8.times do
    sample :drum_heavy_kick
    sleep 1
  end
  stop
end

#Hi Hat
live_loop :cymbal_closed do
  16.times do
    sample :drum_cymbal_closed
    sleep 0.5
  end
  stop
end
